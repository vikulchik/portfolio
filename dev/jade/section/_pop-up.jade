.pop-up
  .pop-up_add
    .pop-up_form
      h3.pop-up_title Добавление проекта
      form(id="pop-up_add-new-project" method="POST")
        .server-mes
        label.pop-up_label Название проекта
          input(type="text" name="text" placeholder="Введите название").pop-up_input.error
          .pop-up_qtip.qtip-name(data-text="введите название") введите название
        p.pop-up_description Картинка проекта
        label.pop-up_label.pop-up_label-download.error Загрузите изображение
          input(type="file" name="photo" multiple accept="image/*,image/jpeg").pop-up_input.pop-up_input-download
          .pop-up_qtip.qtip-img(data-text="изображение") изображение
        label.pop-up_label URL проекта
          input(type="text" name="text" placeholder="Добавьте ссылку").pop-up_input.error
          .pop-up_qtip.qtip-url(data-text="ссылка на проек") ссылка на проек
        label.pop-up_label Описание
          textarea(name="text" placeholder="Пара слов о Вашем проекте").pop-up_input.pop-up_input-message.error
          .pop-up_qtip.qtip-text(data-text="описание проекта") описание проекта
        .button_add
          button(type="submit").input_button.button-submit Добавить
      a(href="#").pop-up_close X
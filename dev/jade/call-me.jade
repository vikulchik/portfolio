include section/_mixins

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title Call me
    link(rel="icon" href="img/favicon.ico" type="image/x-icon")
    link(rel="stylesheet" href="css/main.css")
    script(src='https://www.google.com/recaptcha/api.js')

  body

    <!--[if lte IE 8]><!-->
    script(src='js/for-ie.js')
    <!--<![endif]-->

    include section/_header
    .wrapper
      .main
        .main-content.clearfix
          section.navigation
            ul.nav-list
              li.nav-item
                a(href="index.html").nav-link Обо мне
              li.nav-item
                a(href="work.html").nav-link Мои работы
              li.nav-item
                a(href="call-me.html").nav-link.active Обратная связь
            .contact-description
              span.contact-title Контакты
            ul.contact-list
              li.contact-item
                a(href="mailto:kvvendetta@gmail.com").contact-link.contact-mail kvvendetta
              li.contact-item
                a(href="tel:+380631162291").contact-link.contact-phone +380631162291
              li.contact-item
                a(href="skype:vikanovik.vika").contact-link.contact-skype vikanovik.vika
          .main-information
            section.about-me
              h2.about-me_title У вас интересный проект? Напишите мне
              .about-me_info.about-me_call-me
                .about-me_form.clearfix
                  form
                    label.our-label Имя
                      input(type="text" name="text" placeholder="Как к Вам обращаться").input-placeholder
                      .qtip.qtip-first-name введите имя
                    label.our-label Email
                      input(type="email" name="email" placeholder="Куда мне писать").input-placeholder
                      .qtip.qtip-email введите email
                    label.our-label.our-label_email Сообщение
                      textarea(name="message" placeholder="Кратко в чем суть").input-placeholder.input-placeholder_message
                      .qtip.qtip-message ваш вопрос
                    label.our-label.our-label_captca Введите код, указанный на картинке
                      .g-recaptcha.about-me_captcha(data-sitekey="6LcmkRYTAAAAAHzy14FKT6K1ZJZWpszOCLuky4aW")
                    .form-button
                      input(type="submit" name="submit" value="Отправить").button-submit.button
                      input(type="reset" name="reset" value="Очистить").button-reset.button

    include section/_footer
    include section/_pop-up

    script(src="js/app.js" defer)


